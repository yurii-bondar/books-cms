{
  "name": "books-cms",
  "version": "0.0.1",
  "description": "Book content management system",
  "author": {
    "name": "Yurii Bondar",
    "email": "yurii.bondar.vn@gmail.com"
  },
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "postbuild": "cp -r env dist/",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migration:create": "npx typeorm migration:create src/migrations",
    "migration": "npx typeorm migration:run -d dist/data-source.js",
    "migration:revert": "npx typeorm migration:revert -d ./data-source.ts",
    "migration:test": "POSTGRES_DB_NAME=test_books_cms NODE_ENV=test npx typeorm migration:run -d dist/data-source.js",
    "start:maintanance:services": "docker compose up -d --build --scale books-cms=0",
    "start:app:docker": "docker compose up -d --build books-cms",
    "migration:docker": "docker exec -it books-cms npx typeorm migration:run -d dist/data-source.js"
  },
  "keywords": [
    "typescript",
    "nest.js",
    "postgres",
    "dynamodb",
    "redis",
    "apollo",
    "graphql",
    "docker",
    "jwt"
  ],
  "dependencies": {
    "@apollo/server": "^4.11.3",
    "@aws-sdk/client-dynamodb": "^3.744.0",
    "@jest-mock/express": "^3.0.0",
    "@nestjs-modules/ioredis": "^2.0.2",
    "@nestjs/apollo": "^13.0.2",
    "@nestjs/common": "^11.0.8",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.8",
    "@nestjs/graphql": "^13.0.2",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/typeorm": "^11.0.0",
    "apollo-server-express": "^3.13.0",
    "aws-sdk": "^2.1692.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dompurify": "^3.2.4",
    "graphql": "^16.10.0",
    "helmet": "^8.0.0",
    "ioredis": "^5.4.2",
    "jest-mock-extended": "^4.0.0-beta1",
    "jsdom": "^26.0.0",
    "nano": "^10.1.4",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "sanitize-html": "^2.14.0",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/dompurify": "^3.0.5",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.2",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.3.1",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
